<h1>New menu</h1>

<div class="row">
  <div class="span4">
    <%= render 'form' %>
  </div>
  
  <div class="span4">
    <h3>Categories</h3>
    
    <div class="categories well">
      <% @category.each do |cat| %>
      <p><button type="button" class="btn btn-cat" data-toggle="button"><%= cat.name %></button>
      <% end %>
    </div>
    
  </div>
</div>

<% @category.each do |cat| %>
      <%= cat.to_yaml %>
      <% end %>


<%= link_to 'Back', menus_path %>
